<h1 class="display-4"><a href="/dashboard" class="fas fa-angle-double-left"></a>Create Tasks</h1><br>
<form action="/users/tasks" method="POST">
    <div class="form-group">
        <input name="title" class="form-control" required autocomplete="off" placeholder="Title">
    </div>
    <div class="form-group">
        <textarea name="description" class="form-control" required placeholder="Description"></textarea>
    </div>
    <div class="form-group">
        <select name="completed" class="form-control form-control-lg">
            <option value="true">TRUE</option>
            <option selected value="false">FALSE</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>