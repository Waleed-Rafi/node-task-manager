<h1 class="display-4"><a href="/dashboard" class="fas fa-angle-double-left"></a>Update Task</h1><br>
<form action="/users/update/task/<%= task._id %>" method="POST">
    <div class="form-group">
        <input name="title" class="form-control" required autocomplete="off" value="<%= task.title %>">
    </div>
    <div class="form-group">
        <textarea name="description" class="form-control" required><%= task.description %></textarea>
    </div>
    <div class="form-group">
        <select name="completed" class="form-control form-control-lg">
            <option id='val1' value="true">TRUE</option>
            <option selected id='val2' value="false">FALSE</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>